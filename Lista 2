// Questao 01 
// lista 2 




#include<stdio.h>
#include<stdlib.h>
#include<locale.h>
int main(){
setlocale(LC_ALL, "portuguese");
	
	int n, i;
	int soma;
	soma = 0;
	
	printf("Digite o tamanho do vetor : \n");
	scanf("%d", &n);
	printf("Digite os valores do vetor : \n");
	
	int *vet = malloc(n*sizeof(int));
	if(vet==NULL){
		printf("Erro na alocação de memória");
		exit(1);
	}
	for(i=0;i<n;i++){
		scanf("%d", &vet[i]);
	}	
	
	for(i=0;i<n;i++){
		soma = soma + vet[i];	
	}
	
	for(i=0;i<n;i++){
		printf("valor[%d] = %d \n", i,vet[i]);

	}
	
	int maior;
	maior = vet[0];
	for(i=0;i<n;i++){
		if(vet[i] > maior)
			maior = vet[i];
	}
	int menor;
	menor = vet[0];
	for(i=0;i<n;i++){
		if(vet[i] < menor)
			menor = vet[i];
	}
		
	
	printf("Soma dos valores : %d \n", soma);
	printf("O maior elemento do vetor é %d \n", maior);
    printf("O menor elemento do vetor é %d", menor);
	
	
	free(vet);
	
	
	return 0;
}


