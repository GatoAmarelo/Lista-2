#include<stdio.h>
#include<stdlib.h>
#include<locale.h>
int main(){
setlocale(LC_ALL, "portuguese");
	

    int cont, quant;
	
	printf("Digite a quantidade de alunos : \n");
	scanf("%d", &quant);
     
    for(cont=0;cont<quant;cont++){
    	
    int n, i;
	int soma;
	soma = 0;
	float media;
	
		
	printf("Digite a quantidade de notas do aluno %d : \n", cont);
	scanf("%d", &n);
	printf("Digite as notas : \n");
	
	float *vet_notas = malloc(n*sizeof(float));
	if(vet_notas==NULL){
		printf("Erro na alocação de memória");
		exit(1);
	}
	for(i=0;i<n;i++){
		scanf("%f", &vet_notas[i]);
	}	
	
	
	for(i=0;i<n;i++){
		soma = soma + vet_notas[i];
        media = soma/n;
	}
	
	for(i=0;i<n;i++){
		printf("nota[%d] = %.1f \n", i,vet_notas[i]);

	}
	
  	    printf("A media é %.1f \n", media);
	    free(vet_notas);

	}
		
	
	return 0;
}

// Questao 03 
// lista 2 




#include<stdio.h>
#include<stdlib.h>
#include<locale.h>


void preenche_ordenado(int n, int *v) {
	
	int i, j, a;	
	printf("Digite a quantidade de elementos \n");
	scanf("%d", &n);
	printf("Digite os valores : \n");
	
	v = malloc(n*sizeof(int));
	for(i=0;i<n;i++){
		scanf("%d", &v[i]);
	}
	
    for (i=0;i<n-1;i++) {
        for (j=i+1;j<n;j++) {
            if (v[i] > v[j]) {
                a = v[i];
                v[i] = v[j];
                v[j] = a;
            }
        }
    }
	
	for(i=0;i<n;i++){
		printf("%d ", v[i]);
	}
	
	free(v);
	
}

int main(){
setlocale(LC_ALL, "portuguese");

int n,v;

preenche_ordenado(n,&v);
	
	
		
	
	return 0;
}

